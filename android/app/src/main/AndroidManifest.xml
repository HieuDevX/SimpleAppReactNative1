            </intent-filter>
        </activity>
        <activity android:name="com.facebook.react.devsupport.DevSettingsActivity" />

        <meta-data
            android:name="com.bugsnag.android.API_KEY"
            android:value="43f60c3c46b4c722fb8bbc8c65125957" />
